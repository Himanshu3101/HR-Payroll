<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorgrey"
    tools:context=".Survey.ServayHomeActivity">



    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_upperQuest"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/textcolor"
            card_view:cardCornerRadius="5dp"
            android:layout_margin="4dp"
            card_view:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--<FrameLayout android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<android.support.v7.widget.AppCompatButton-->
                        <!--android:id="@+id/answers"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@color/transparent"/>-->

                <!--</FrameLayout>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                        android:id="@+id/tv_question1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:textColor="@color/colorblack"
                        android:padding="4dp"
                        android:layout_marginLeft="6dp"
                        android:maxLines="2"
                        android:textSize="18dp"
                        android:gravity="left" />

                    <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                        android:id="@+id/tv_unreadquestion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:textColor="@color/colorlightblack"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="4dp"
                        android:gravity="left"/>


                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>