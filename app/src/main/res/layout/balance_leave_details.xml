<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbackground"
    android:orientation="vertical">

    <com.yoeki.kalpnay.hrporatal.setting.Textclass
        android:id="@+id/leaveType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="05dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:textSize="@dimen/textFrHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="viewStart"
                    android:text="Used"
                    android:textColor="@color/colorblack"
                    android:gravity = "center_vertical|left|start"
                    android:layout_weight=".1"
                  />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:textSize="@dimen/textNtHeader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="09dp"
                    android:textColorHint="@color/colorgreydark"
                    android:textColor="@color/colorText"
                    android:textAlignment="center"
                    android:text="5"
                    android:background="@drawable/edity_textbackground_circle"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:textSize="@dimen/textFrHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="viewStart"
                    android:text="Remaining"
                    android:textColor="@color/colorblack"
                    android:gravity = "center_vertical|left|start"
                    android:layout_weight=".1"
                    />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:textSize="@dimen/textNtHeader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="09dp"
                    android:textColorHint="@color/colorgreydark"
                    android:textColor="@color/colorText"
                    android:textAlignment="center"
                    android:text="2"
                    android:background="@drawable/edity_textbackground_circle"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Details"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_gravity="center"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/balance_leaveListRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />

                </ScrollView>

            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/kk_leaveDetails"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="OK"
                android:textColor="#fff"
                android:background="@drawable/textbackgroundsolid"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:typeface="serif"
                android:paddingTop="05dp"
                android:textSize="13sp"
             />

        </android.support.v7.widget.LinearLayoutCompat>

    </LinearLayout>

</LinearLayout>