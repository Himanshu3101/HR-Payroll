<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey"
    android:alpha=".8"
    android:orientation="vertical"
    tools:context=".Request.LeaveRequest">
    <RelativeLayout
        android:id="@+id/rl_reqhomehead"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">
        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Shift  Change"
            android:textSize="20dp"
            android:textColor="@color/textcolor"/>
        <ImageView
            android:id="@+id/img_backreqshiftchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/colorgreydark"
                android:gravity="left"
                android:textSize="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangecurrentshift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Shift"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/edt_shiftchangecurrentshift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Shift"
                android:textColor="@color/colorgreydark"
                android:textSize="15dp"
                android:gravity="left"
                android:singleLine="true"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

             <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change To"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangetodep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change To"
                android:textColor="@color/colorgreydark"
                android:textSize="15dp"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangereasone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
                android:id="@+id/edt_shiftchangereason"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Reason"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:textSize="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_shiftchangesubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/textcolor"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/textbackgroundsolid"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>